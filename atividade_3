#include <stdio.h>
#include <math.h>

int main() {
    float num1, num2;
    float dobro_num1, triplo_num1, metade_num2, soma, raiz_quadrada;
    printf("Digite o seu primeiro numero real: ");
    scanf("%f", &num1);
    printf("Digite o seu segundo numero real: ");
    scanf("%f", &num2);
    dobro_num1 = 2 * num1;
    printf("Produto do dobro do seu primeiro numero: %.2f\n", dobro_num1);
    triplo_num1 = 3 * num1;
    metade_num2 = num2 / 2;
printf("Soma do triplo do seu primeiro numero com a metade do segundo numero: %.2f\n", triplo_num1 + metade_num2);
    soma = num1 + num2;
    raiz_quadrada = sqrt(soma);
    printf("Raiz quadrada da soma dos dois numeros: %.2f\n", raiz_quadrada);

    return 0;
}